<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_01"
    tools:context="com.example.admin.androidproject.LoginWithAccount"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        app:srcCompat="@drawable/flat_seo_128" />

    <EditText
        android:id="@+id/txUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtPassword"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_marginBottom="88dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="40dp"


        android:layout_alignTop="@+id/txUsername"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/txUsername"
        app:srcCompat="@drawable/flat_seo_28" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:layout_alignStart="@+id/txtMessenger"
        android:layout_marginBottom="71dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_below="@+id/txUsername"
        app:srcCompat="@drawable/lock_24" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMessenger"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="53dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="clickLogin"
        android:text="Login"
        android:textColor="?android:attr/colorButtonNormal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMessenger"
        android:layout_width="200dp"
        android:layout_height="15dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <ImageView
        android:id="@+id/imgError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/btnLogin"
        android:visibility="invisible"
        app:srcCompat="@drawable/error" />
</RelativeLayout>
