<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.androidproject.PaymentSuccess">

    <ImageView
    android:id="@+id/imageView"
    android:layout_width="200px"
    android:layout_height="200px"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="32dp"
    android:src="@drawable/success" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:text="Your order was paid successfully!!"
        android:textColor="@color/colorBitOrange"
        android:textSize="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/backhomeBtn"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Back Home"
            android:background="@color/colorBitOrange"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/printvatBtn"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:text="Print VAT Bill"
            android:background="@color/colorBitOrange"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


</RelativeLayout>

